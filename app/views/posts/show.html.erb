<div class="col-md-12">
  <div class="group">
    <% if current_user == @post.blog_owner%>
      <%= link_to("Edit", edit_post_path, class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @post.title %></h2>
  <p>Submitted <%= time_ago_in_words(@post.created_at)%> ago</p>
  <p><%= @post.content %></p>
  <hr>

  <%= link_to("Comment", new_post_comment_path(@post), class: "btn btn-primary pull-right")%>
  <br>
  <h3>Comments:</h3>
  <br>
  <% @comments.each do |comment| %>
    <h4><%= comment.content %></h4>
    <% if current_user == @post.blog_owner %>
      <%= link_to("Delete", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-danger pull-right")%>
    <% end %>
  <% end %>
  <%= link_to("Back", posts_path, class: "btn btn-info")%>
</div>
